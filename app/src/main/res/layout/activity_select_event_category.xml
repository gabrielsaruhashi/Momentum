<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shag.com.shag.Activities.SelectEventCategoryActivity">

    <TextView
        android:id="@+id/tvCategoryInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Choose a Category"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_below="@+id/tvCategoryInstructions"
        android:layout_above="@+id/btNext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:weightSum="3">

            <android.support.v7.widget.CardView
                android:id="@+id/chillCard"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="4dp"
                android:onClick="onSelectCategory"
                app:cardBackgroundColor="@color/chill_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/chillIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="104dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_chill" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/chillIcon"
                        android:text="CHILL"
                        android:textAlignment="center"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <Space
                android:layout_width="8dp"
                android:layout_height="16dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/sportsCard"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="4dp"
                android:onClick="onSelectCategory"
                app:cardBackgroundColor="@color/sports_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/sportsIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="104dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_sports" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/sportsIcon"
                        android:text="SPORTS"
                        android:textAlignment="center"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <Space
                android:layout_width="8dp"
                android:layout_height="16dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/musicCard"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="4dp"
                android:onClick="onSelectCategory"
                app:cardBackgroundColor="@color/music_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/musicIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="104dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_music" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/musicIcon"
                        android:text="MUSIC"
                        android:textAlignment="center"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:weightSum="3">

            <android.support.v7.widget.CardView
                android:id="@+id/foodCard"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="4dp"
                android:onClick="onSelectCategory"
                app:cardBackgroundColor="@color/food_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/foodIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="104dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_food" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/foodIcon"
                        android:text="FOOD"
                        android:textAlignment="center"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <Space
                android:layout_width="8dp"
                android:layout_height="16dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/partyCard"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="4dp"
                android:onClick="onSelectCategory"
                app:cardBackgroundColor="@color/party_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/partyIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="104dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_party" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/partyIcon"
                        android:text="PARTY"
                        android:textAlignment="center"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <Space
                android:layout_width="8dp"
                android:layout_height="16dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/miscCard"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="4dp"
                android:onClick="onSelectCategory"
                app:cardBackgroundColor="@color/misc_color"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/miscIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="104dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_misc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/miscIcon"
                        android:text="MISCELLANEOUS"
                        android:textAlignment="center"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <!--<ExpandableListView-->
    <!--android:id="@+id/lvCategories"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginTop="16dp" />-->


</RelativeLayout>
